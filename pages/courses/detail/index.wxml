<view class="course-detail">
  <view class="title">{{course.title}}</view>
  <video src="{{lesson.video}}" controls poster="{{course.cover}}" id="courseVideo"
    style="width:100%;height:200px"></video>

  <view class="lesson-list">
    <block wx:for="{{course.lessons}}" wx:key="{{item.id}}">
      <view class="lesson-item" bindtap="playLesson" data-video="{{item.video}}">{{item.title}}</view>
    </block>
  </view>

  <view class="materials">
    <view class="label">购买材料</view>
    <block wx:for="{{course.materials}}" wx:key="{{item.skuId}}">
      <view class="material-item">
        <image src="{{item.image}}" class="mat-thumb" />
        <view class="mat-info">
          <view>{{item.title}}</view>
          <view>¥{{item.price}}</view>
          <button bindtap="buyMaterial" data-sku='{{JSON.stringify(item)}}'>加入购物车</button>
        </view>
      </view>
    </block>
  </view>
</view>