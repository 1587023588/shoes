.goods-card {
  box-sizing: border-box;
  font-size: 24rpx;
  border-radius: 20rpx;
  border-bottom: none;
  background: transparent;
}

.goods-card__main {
  position: relative;
  display: flex;
  line-height: 1;
  padding: 0;
  background: transparent;
  width: 100%;
  border-radius: 20rpx;
  align-items: center;
  justify-content: center;
  margin-bottom: 0;
  flex-direction: column;
}

.goods-card__thumb {
  flex-shrink: 0;
  position: relative;
  width: 100%;
  height: 340rpx;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
}

.goods-card__thumb:empty {
  display: none;
  margin: 0;
}

.goods-card__img {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
}

.goods-card__body {
  display: flex;
  flex: 1 1 auto;
  background: linear-gradient(180deg,#FAF9F6 0%, #F5F2EC 100%);
  border: 1rpx solid var(--brand-line);
  border-top: none;
  padding: 16rpx 24rpx 18rpx;
  flex-direction: column;
}

.goods-card__upper {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  flex: 1 1 auto;
}

.goods-card__title {
  flex-shrink: 0;
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
  display: -webkit-box;
  height: 72rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  overflow: hidden;
  word-break: break-word;
  line-height: 36rpx;
}

.goods-card__tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 8rpx 0 0 0;
}

.goods-card__tag {
  color: var(--brand-primary);
  background: rgba(107,142,35,0.08);
  font-size: 20rpx;
  border: 1rpx solid var(--brand-primary);
  padding: 0 8rpx;
  border-radius: 16rpx;
  line-height: 30rpx;
  margin: 0 8rpx 8rpx 0;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  word-break: keep-all;
  text-overflow: ellipsis;
}

.goods-card__down {
  display: flex;
  position: relative;
  flex-direction: row;
  justify-content: flex-start;
  align-items: baseline;
  line-height: 32rpx;
  margin: 8rpx 0 0 0;
}

.goods-card__origin-price {
  white-space: nowrap;
  font-weight: 700;
  order: 2;
  color: #9b8b78;
  font-size: 24rpx;
  margin: 0 0 0 8rpx;
}

.goods-card__add-cart {
  order: 3;
  margin: auto 0 0 auto;
  position: absolute;
  bottom: 12rpx;
  right: 12rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #fff;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.15);
}

.spec-for-price {
  font-size: 36rpx;
  white-space: nowrap;
  font-weight: 700;
  order: 1;
  color: var(--brand-price);
  margin: 0;
}

.spec-for-symbol {
  font-size: 24rpx;
}

.rural-old-price {
  color: #9b8b78;
}

.rural-support-badge {
  position: absolute;
  left: 0;
  top: 0;
  background: var(--brand-primary);
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 14rpx;
  border-bottom-right-radius: 16rpx;
}
