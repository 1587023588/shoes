/* 全屏容器：黑色背景，避免视频边缘白边 */
.video-container {
	width: 100%;
	height: 100vh;
	background-color: #000;
	position: relative;
	overflow: hidden;
}

/* 视频播放器：占满屏幕，保持比例 */
.video-player {
	width: 100%;
	height: 100%;
	object-fit: contain; /* 完整显示视频，不拉伸变形 */
}

/* 加载中样式：居中显示旋转图标 */
.loading {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	z-index: 10;
}

.loading-icon {
	width: 60rpx;
	height: 60rpx;
	border: 4rpx solid rgba(255, 255, 255, 0.3);
	border-top-color: #fff;
	border-radius: 50%;
	animation: spin 1s linear infinite; /* 旋转动画 */
	margin-bottom: 20rpx;
}

.loading-text {
	color: #fff;
	font-size: 28rpx;
}

/* 错误提示样式：居中显示错误信息 */
.error {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 40rpx;
	z-index: 10;
}

.error-icon {
	font-size: 60rpx;
	color: #ff4444;
	margin-bottom: 20rpx;
}

.error-text {
	color: #fff;
	font-size: 28rpx;
	text-align: center;
	margin-bottom: 30rpx;
	line-height: 1.6;
}

/* 重新加载按钮：红色主题，圆角样式 */
.reload-btn {
	background-color: #8B0000;
	color: #fff;
	border-radius: 30rpx;
	padding: 15rpx 40rpx;
	font-size: 26rpx;
}

/* 旋转动画关键帧 */
@keyframes spin {
	from { transform: rotate(0deg); }
	to { transform: rotate(360deg); }
}
