.goods-category {
  display: flex;
  height: 100%;
}

.custom-sidebar {
  height: 100%;
  width: 180rpx;
  background-color: #f5f5f5;
}

.goods-category__right {
  height: 100%;
  flex: auto;
  width: 0;
  position: relative;
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
  background-color: white;
  padding-bottom: 100rpx; /* 避免被底部导航遮挡 */
}

.flex {
  display: flex;
}

.goods-category-normal {
  margin: 28rpx 34rpx 0rpx 32rpx;
}

.goods-category-normal-item-title {
  font-size: 30rpx;
  font-weight: 500;
  padding: 10rpx 0;
  border-bottom: 1px solid #f0f0f0;
  margin-bottom: 15rpx;
}

.goods-category-normal-item-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 28rpx 10rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-wrap: wrap;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05); /* 增加轻微阴影 */
}

/* 修复卡片样式 */
.goods-category-normal-item-container-item {
  min-height: 260rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10rpx;
  width: 33.3%;
  padding: 15rpx;
  box-sizing: border-box;
}

.image-container {
  width: 144rpx;
  height: 144rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f5f5f5; /* 图片加载前的背景色 */
}

.goods-category-normal-item-container-item .image {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 图片自适应裁剪 */
}

.goods-category-normal-item-container-item-title {
  justify-content: center;
  font-size: 26rpx;
  color: #222;
  margin-top: 15rpx;
  height: auto;
  line-height: 1.3;
  text-align: center;
  padding: 0 5rpx;
}

/* 修复文字排版 */
.reservation-time {
  font-size: 22rpx;
  color: #666;
  margin-top: 10rpx;
  height: auto;
  line-height: 1.3;
  text-align: center;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.reservation-quota {
  font-size: 22rpx;
  margin-top: 10rpx;
  height: auto;
  line-height: 1.3;
  text-align: center;
  width: 100%;
}

.reservation-quota:not(.full) {
  color: #0071ce;
}

.reservation-quota.full {
  color: #999;
}

.reservation-location {
  font-size: 20rpx;
  color: #666;
  background: #f5f5f5;
  padding: 3rpx 12rpx;
  border-radius: 6rpx;
  margin-top: 10rpx;
  text-align: center;
}
  