/* 主题定制与北庄布鞋风格统一 */
/* =============== 基础组件局部默认覆盖（放最前避免被后续品牌变量冲掉） =============== */
.t-input { --td-input-placeholder-text-color: #bbbbbb; --td-input-text-color: #333333; }
.t-tab-bar { --td-tab-bar-color: #bbb; }
.t-cascader { --td-cascader-active-color: #fa4126; }
.t-switch { --td-switch-checked-color: #34c759; }
.t-button { --td-button-font-weight: 500; --td-button-medium-font-size: 32rpx; --td-button-default-color: #fff; }

/* =============== 北庄布鞋 Rural Revitalization Theme 色板与语义变量 =============== */
/* 主色选取橄榄绿 (#6B8E23)，构造必要色阶（近似手动调和）并映射到 tdesign brand 体系 */
:root, page {
  /* 品牌主语义色 */
  --brand-primary: #6B8E23; /* base */
  --brand-primary-hover: #5e7d1f; /* hover/active 深一阶 */
  --brand-primary-active: #516b1b;
  --brand-primary-disabled: #b9c7a0;
  /* 辅助色（工艺/泥土/价格/状态） */
  --brand-accent: #C17F37;  /* 赭棕：手工、故事 */
  --brand-accent-soft: #e5c7a3;
  --brand-price: #D86422;   /* 暖橙 价格强调 */
  --brand-price-bg: #faede6;
  --brand-success: #4C7F28;
  --brand-warning: #D68A1E;
  --brand-danger: #B02A1F;
  /* 中性色/背景 */
  --brand-bg: #F5F2EC;      /* 宣纸米白背景 */
  --brand-bg-alt: #FAF9F6;  /* 次级卡片 */
  --brand-line: #D8D2C4;    /* 分隔线 */
  --brand-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);

  /* 将品牌色映射到 tdesign 变量（最关键的 1/2/5/7/9 层级） */
  --td-brand-color: var(--brand-primary);
  --td-brand-color-hover: var(--brand-primary-hover);
  --td-brand-color-active: var(--brand-primary-active);
  --td-brand-color-disabled: var(--brand-primary-disabled);
  --td-brand-color-light: #eef2e6;
  /* primary-color-x 映射简化：不足色阶用近似色/透明度推导 */
  --td-primary-color-1: #f5f7ef;
  --td-primary-color-2: #e3ead2;
  --td-primary-color-3: #d1ddb6;
  --td-primary-color-4: #bfd09b;
  --td-primary-color-5: #a9c07b;
  --td-primary-color-6: #8fae55;
  --td-primary-color-7: var(--brand-primary);
  --td-primary-color-8: #4f661a;
  --td-primary-color-9: #3c4d13;
  --td-primary-color-10:#2a350d;
  /* 兼容旧引用 */
  --td-brand-color-1: var(--td-primary-color-1);
  --td-brand-color-2: var(--td-primary-color-2);
  --td-brand-color-3: var(--td-primary-color-3);
  --td-brand-color-4: var(--td-primary-color-4);
  --td-brand-color-5: var(--td-primary-color-5);
  --td-brand-color-6: var(--td-primary-color-6);
  --td-brand-color-7: var(--td-primary-color-7);
  --td-brand-color-8: var(--td-primary-color-8);
  --td-brand-color-9: var(--td-primary-color-9);
  --td-brand-color-10:var(--td-primary-color-10);
}

/* =============== 组件品牌化统一（按钮/标签/复选/标签栏等） =============== */
.t-button {
  --td-button-default-bg-color: var(--brand-primary);
  --td-button-default-border-color: var(--brand-primary);
  --td-button-default-active-bg-color: var(--brand-primary-hover);
  --td-button-default-active-border-color: var(--brand-primary-hover);
  --td-button-primary-color: #fff;
  --td-button-primary-bg-color: var(--brand-primary);
  --td-button-primary-border-color: var(--brand-primary);
  --td-button-primary-active-bg-color: var(--brand-primary-active);
  --td-button-primary-active-border-color: var(--brand-primary-active);
  --td-button-primary-disabled-bg: var(--brand-primary-disabled);
}
.t-tab-bar { --td-tab-bar-active-color: var(--brand-primary); }
.t-checkbox { --td-checkbox-icon-checked-color: var(--brand-primary); }
.t-switch { --td-switch-checked-color: var(--brand-primary); }
.t-tag { --td-tag-primary-color: var(--brand-primary); }
.t-tabs { --td-tabs-active-color: var(--brand-primary); }
.t-badge { --td-badge-color: #fff; --td-badge-bg-color: var(--brand-price); }
.dialog__button-confirm { color: var(--brand-primary) !important; }

/* =============== 自定义乡村主题工具类 =============== */
.rural-button-primary { background: var(--brand-primary); border:1rpx solid var(--brand-primary); color:#fff; border-radius:16rpx; }
.rural-button-primary:active { background:var(--brand-primary-hover); }
.rural-accent { color: var(--brand-accent); }
.rural-price { color: var(--brand-price); }
.rural-bg { background: var(--brand-bg); }
.rural-section-card { background: linear-gradient(180deg,var(--brand-bg-alt) 0%, var(--brand-bg) 100%); border:1rpx solid var(--brand-line); border-radius:20rpx; box-shadow: var(--brand-shadow); }
.rural-tag-accent { background:rgba(193,127,55,0.12); color:var(--brand-accent); border:1rpx solid rgba(193,127,55,0.4); padding:0 14rpx; border-radius:18rpx; font-size:22rpx; }
.rural-tag-handmade { background:linear-gradient(90deg,rgba(193,127,55,0.18),rgba(107,142,35,0.18)); color:#574e3f; border:1rpx solid var(--brand-line); padding:0 16rpx; border-radius:18rpx; font-size:22rpx; }
.rural-badge-aid { background:var(--brand-price); color:#fff; padding:0 10rpx; border-radius:14rpx; font-size:20rpx; }

/* =============== 价格强调/旧价辅助 =============== */
.rural-price-text { color:var(--brand-price); font-weight:600; }
.rural-old-price { color:#9b8b78; text-decoration:line-through; }

/* =============== 表单/输入强化（可继续扩展） =============== */
.rural-input-outline { border:1rpx solid var(--brand-line); border-radius:12rpx; padding:8rpx 16rpx; background:#fff; }
.rural-input-outline:focus-within { border-color:var(--brand-primary); box-shadow:0 0 0 4rpx rgba(107,142,35,0.15); }

/* =============== 动画/过渡（轻量） =============== */
.rural-fade-in { animation:ruralFadeIn .3s ease both; }
@keyframes ruralFadeIn { from { opacity:0; transform:translateY(12rpx);} to { opacity:1; transform:translateY(0);} }

/* 保留未品牌化部分 */
.t-textarea { --td-textarea-placeholder-color: #bbb; }
/* 取消按钮维持中性色 */
.dialog__button-cancel { color: #aeb3b7 !important; }
