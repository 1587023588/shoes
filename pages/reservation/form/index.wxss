.page-container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding-bottom: 60rpx;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 10;
}

.back-btn {
  width: 60rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.nav-empty {
  width: 60rpx;
  height: 100rpx;
}

/* 展览信息卡片 */
.exhibition-card {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  padding: 24rpx;
}

.card-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

.card-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.card-meta {
  display: flex;
  margin-bottom: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
  margin-right: 24rpx;
}

.meta-item text {
  margin-left: 8rpx;
}

.location-tag {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #0071ce;
  background-color: #e8f4ff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  width: fit-content;
}

.location-tag text {
  margin-left: 6rpx;
}

.card-notice {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #fa4343;
  padding: 16rpx 24rpx;
  background-color: #fff8f8;
  border-top: 1rpx solid #fff0f0;
}

.card-notice text {
  margin-left: 10rpx;
}

/* 表单样式 */
.form-container {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 18rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 26rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.item-label {
  width: 180rpx;
  font-size: 30rpx;
  color: #333;
}

.required::after {
  content: '*';
  color: #fa4343;
  margin-left: 6rpx;
}

.item-input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  padding-right: 10rpx;
  height: 48rpx;
  line-height: 48rpx;
}

.item-input::placeholder {
  color: #c9c9c9;
}

.item-picker {
  flex: 1;
}

.picker-text {
  font-size: 30rpx;
  color: #333;
  text-align: right;
  padding-right: 10rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #0071ce;
  color: #fff;
  font-size: 32rpx;
  border-radius: 50rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 113, 206, 0.3);
  transition: all 0.3s;
}

.submit-btn:not([disabled]):active {
  background-color: #005ca8;
  box-shadow: 0 2rpx 8rpx rgba(0, 113, 206, 0.2);
  transform: translateY(2rpx);
}

.btn-disabled {
  background-color: #c9c9c9 !important;
  box-shadow: none !important;
}

/* 提示文本 */
.tip-text {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 1.5;
}
    