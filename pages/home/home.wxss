.rural-quick-nav__wrap { display: flex; }
.rural-quick-nav__item {
  width: 120rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
}
.rural-quick-nav__icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #eee;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.06);
}
.rural-quick-nav__text { margin-top: 12rpx; font-size: 24rpx; color: #444; }

/* 品牌故事卡：margin-top 控制与上一个模块的间距；gap 控制图片与文字块横向距离 */
.rural-brand-story { display:flex; gap:20rpx; margin-top:20rpx; }
.rural-brand-story__content { flex: 1; }
.rural-brand-story__title { font-size: 30rpx; color: #362e20; font-weight: 600; margin-bottom: 8rpx; }
.rural-brand-story__desc { font-size: 24rpx; line-height: 1.5; color: #5a4d39; }
.rural-brand-story__image { width: 180rpx; height: 180rpx; border-radius: 12rpx; object-fit: cover; }

/* 手工工艺模块整体与前一模块间距 */
.rural-craft { margin-top:20rpx; }
.rural-craft__header { font-size: 30rpx; font-weight: 600; color: #362e20; margin-bottom: 16rpx; }
.rural-craft__steps { display: flex; justify-content: space-between; }
.rural-craft__step { flex: 1; text-align: center; }
.rural-craft__step-name { font-size: 26rpx; color: #3f3525; font-weight: 600; }
.rural-craft__step-desc { font-size: 22rpx; color: #7a6d5a; margin-top: 4rpx; }

/* 助农项目高亮卡：含图 + 说明区域，gap 控制左右块距离 */
.rural-project { display:flex; margin-top:20rpx; gap:20rpx; align-items:center; }
.rural-project__image { width: 200rpx; height: 160rpx; border-radius: 16rpx; object-fit: cover; }
.rural-project__info { flex: 1; }
.rural-project__title { font-size: 30rpx; font-weight: 600; color: #553d1e; }
.rural-project__sub { font-size: 22rpx; color: #7a674f; margin: 6rpx 0 10rpx; }
.rural-project__stat { font-size: 26rpx; color: var(--brand-accent, #c17f37); font-weight: 600; }

