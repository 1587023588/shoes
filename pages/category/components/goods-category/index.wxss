.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 标题样式 */
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  padding: 30rpx 0;
  color: #d93025; /* 红色主题色 */
}

/* 标签页容器 */
.tabs-container {
  background-color: white;
  margin: 0 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 精神介绍卡片 */
.spirit-card {
  padding: 30rpx 20rpx;
}

/* 图片样式 */
.spirit-image {
  width: 100%;
  height: auto;
  border-radius: 12rpx;
  margin-bottom: 25rpx;
}

/* 标题与摘要 */
.spirit-header {
  margin-bottom: 30rpx;
}
.spirit-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}
.spirit-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 内容区域通用样式 */
.content-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #d93025;
  margin: 25rpx 0 15rpx;
  padding-left: 10rpx;
  border-left: 4rpx solid #d93025;
}
.content-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.8;
  text-indent: 52rpx; /* 首行缩进 */
}

/* 历史背景区域 */
.spirit-background {
  margin-top: 10rpx;
}
    