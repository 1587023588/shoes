<!-- 顶部：视频播放区块 -->
<view class="home-video-wrap">
  <video id="home-top-video" class="home-video"
    src="https://shoes-1379330878.cos.ap-beijing.myqcloud.com/9%E6%9C%8820%E6%97%A5.mp4" object-fit="cover" controls
    show-center-play-btn enable-progress-gesture autoplay="{{videoAutoplay}}" muted="{{videoMuted}}"
    loop="{{videoLoop}}" binderror="onVideoError"></video>
</view>

<!-- 开发调试面板：仅在 showDebug 为 true 时显示 -->
<view class="home-debug-panel" wx:if="{{showDebug}}">
  <text>funcList length: {{funcList.length}}</text>
  <view wx:for="{{funcList}}" wx:key="index">
    <text>{{index}}: {{item.text}}</text>
  </view>
</view>

<!-- 英雄大图 -->
<view class="hero">
  <image class="hero__img" src="{{heroImage}}" mode="aspectFill" />
  <view class="hero__title">一履山河情</view>
  <view class="hero__overlay-bottom"></view>
</view>

<!-- 白底圆角功能宫格（2x4） -->
<view class="func-card">
  <view class="func-grid func-grid--balance">
    <view class="func-item" wx:for="{{funcList}}" wx:key="index" data-index="{{index}}" bindtap="onFuncTap">
      <view class="func-icon func-icon--lg">
        <image src="{{item.iconUrl}}" class="func-icon-img" mode="aspectFill" />
        <view class="func-icon-label">{{item.text}}</view>
      </view>
    </view>
  </view>
</view>

<t-toast id="t-toast" />