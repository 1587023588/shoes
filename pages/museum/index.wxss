/* 全屏容器：黑色背景突出图片，避免白边 */
.carousel-container {
  position: relative;
  width: 100%;
  height: 100vh; /* 占满屏幕高度 */
  overflow: hidden;
  background-color: #000;
}

/* 轮播 wrapper：flex布局实现横向排列，过渡动画确保平滑切换 */
.carousel-wrapper {
  display: flex;
  height: 100%;
  transition-property: transform;
  will-change: transform; /* 开启硬件加速，减少卡顿 */
}

/* 单张图片容器：占满屏幕宽度，不缩放 */
.carousel-slide {
  width: 100%;
  flex-shrink: 0;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 图片样式：保持比例完整显示，避免拉伸变形 */
.slide-image {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain; /* 关键：图片完整显示，不裁剪 */
}

/* 底部指示器：小圆圈样式，当前图片对应指示器高亮 */
.indicators {
  position: absolute;
  bottom: 30rpx; /* 距离底部30rpx，适配小程序单位 */
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 8rpx; /* 指示器间距 */
  z-index: 10; /* 确保在图片上方显示 */
}

.indicator {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.4); /* 未选中：半透明白色 */
  transition: all 0.3s ease; /* 切换时的过渡动画 */
}

.indicator.active {
  background-color: #fff; /* 选中：纯白色 */
  width: 30rpx; /* 选中时变宽，提升辨识度 */
  border-radius: 5rpx; /* 变宽后改为圆角矩形 */
}

/* 左右切换按钮：半透明黑色背景，hover时加深 */
.control-btn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%); /* 垂直居中 */
  width: 80rpx;
  height: 80rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 50%; /* 圆形按钮 */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  opacity: 0.7;
  transition: opacity 0.3s, background-color 0.3s;
  z-index: 10;
}

/* 鼠标悬浮时按钮更明显 */
.control-btn:hover {
  opacity: 1;
  background-color: rgba(0, 0, 0, 0.5);
}

/* 左按钮位置：距离左侧20rpx */
.prev {
  left: 20rpx;
}

/* 右按钮位置：距离右侧20rpx */
.next {
  right: 20rpx;
}