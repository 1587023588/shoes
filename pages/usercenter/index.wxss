page { background-color: var(--brand-bg); }
/* 头部与主体分离布局 */
.usercenter-header { padding:200px 32rpx 32rpx; position:relative; }
.usercenter-body { padding:0 32rpx 80rpx; }
.section { margin-bottom:48rpx; }
.section:last-child { margin-bottom:0; }

.main-content {
  height: 500rpx;
}

.order-group-wrapper {
  margin-bottom: 24rpx;
}

.order-group-note {
  font-size: 28rpx;
}

.cell-box { border-radius:20rpx; overflow:hidden; margin-bottom:28rpx; background:var(--brand-bg-alt,#FAF9F6); border:1rpx solid var(--brand-line); box-shadow:var(--brand-shadow); }
.icon-color {
  color: #aaa;
}
.cell-class {
  height: 100rpx;
  display: flex;
  align-items: center;
}

.order-content {
  overflow: hidden;
  width: 100%;
  display: flex;
  background: linear-gradient(180deg,var(--brand-bg-alt,#FAF9F6) 0%, var(--brand-bg,#F5F2EC) 100%);
  border:1rpx solid var(--brand-line);
  border-radius: 24rpx;
  box-shadow: var(--brand-shadow);
}

.order-item {
  flex: 1;
  height: 180rpx;
  overflow: hidden;
  position: relative;
  text-align: center;
}

.order-content-box {
  margin: auto;
  position: absolute;
  width: 100%;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}
.order-content-t {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #574e3f;
  letter-spacing: 1rpx;
  text-align: center;
}

.popup-content {
  background: var(--brand-bg);
  margin-bottom: env(safe-area-inset-bottom);
  border-radius: 24rpx 24rpx 0 0;
}
.popup-content .popup-title {
  background: var(--brand-bg-alt,#FAF9F6);
  text-align: center;
  font-size: 24rpx;
  color: #7a715f;
  height: 112rpx;
  line-height: 112rpx;
  border-radius: 24rpx 24rpx 0 0;
  font-weight:600;
}

.border-bottom-1px {
  position: relative;
}

.border-bottom-1px::after {
  position: absolute;
  display: block;
  content: '';
  box-sizing: border-box;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: left top;
  border-bottom: 2rpx solid #e5e5e5;
}
.popup-content .popup-phone,
.popup-content .popup-close {
  background: #fff;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 500;
  color: #574e3f;
}
.popup-content .popup-phone.online {
  margin-bottom: 20rpx;
}
.popup-content .popup-phone.online::after {
  content: none;
}
.popup-content .popup-close {
  color: var(--brand-primary);
  border: 0;
  margin-top: 16rpx;
}

.my-order {
  border-radius: 10rpx;
}

.footer__version { text-align:center; margin-top:40rpx; color:#7a715f; margin-bottom:8rpx; font-size:24rpx; line-height:32rpx; }

/* 用户统计扩展 */
.user-stats-card { margin-top:24rpx; position:relative; z-index:2; }
.stats-row { display:flex; justify-content:space-between; }
.stats-item { flex:1; text-align:center; }
.stats-item + .stats-item { border-left:1rpx solid var(--brand-line); }
.stats-value { font-size:40rpx; font-weight:600; color:var(--brand-primary); letter-spacing:1rpx; }
.stats-label { margin-top:8rpx; font-size:22rpx; color:#7a715f; }
.stats-divider { height:1rpx; background:var(--brand-line); margin:28rpx 0 20rpx; transform:scaleY(.5); transform-origin:0 0; }
.story-entry { display:flex; align-items:center; justify-content:space-between; color:#574e3f; font-size:26rpx; padding:4rpx 0; }
.story-text { font-weight:500; }
.story-entry:active { opacity:.7; }

/* Rural themed adjustments for icons / cells */
.icon-color { color: var(--brand-primary); }
.cell-box .t-cell-padding { background:transparent; }
.cell-box .order-group__left { color:#574e3f; }
.cell-box .t-cell-padding::after { content:""; position:absolute; left:0; right:0; bottom:0; height:1rpx; background:var(--brand-line); transform:scaleY(.5); transform-origin:0 100%; }
.cell-box .order-group__left {
  margin-right: 0;
}
.cell-box .t-cell-padding { padding:24rpx 18rpx 24rpx 32rpx; }

/* 分区标题 */
.rural-section-title { font-size:30rpx; font-weight:600; color:#574e3f; margin:0 0 20rpx 4rpx; position:relative; }
.rural-section-title:before { content:""; position:absolute; left:-4rpx; top:50%; transform:translateY(-50%); width:6rpx; height:32rpx; background:var(--brand-primary); border-radius:3rpx; }

/* 订单组与功能区扁平化 */
.order-group-wrapper.plain, .cell-box.plain { box-shadow:none; background:var(--brand-bg-alt,#FAF9F6); }
