.custom-tab-bar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.custom-tab-bar-wrapper .text {
  font-size: 20rpx;
  position: relative;
}

.cart-badge {
  position: absolute;
  top: -10rpx;
  right: -30rpx;
  background: var(--brand-accent, #d35400);
  color: #fff;
  min-width: 32rpx;
  padding: 0 8rpx;
  border-radius: 24rpx;
  font-size: 20rpx;
  line-height: 32rpx;
  text-align: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15);
}
