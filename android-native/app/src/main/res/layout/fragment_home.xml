<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 顶部区域：浅绿背景、位置天气 + 红描边搜索框 + 相机 + 搜索按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/top_bg"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="8dp">

            <!-- 顶部两行：第一行位置；第二行 天气 + 搜索输入框 + 相机 + 搜索按钮 同行 -->
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秦皇岛"
                android:textColor="#8A6D3B"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingBottom="6dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 天气 -->
                <TextView
                    android:id="@+id/tv_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晴 21℃"
                    android:textColor="#8A6D3B"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"/>

                <!-- 搜索框 占满剩余空间 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_search_box"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/et_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="搜索"
                        android:background="@android:color/transparent"
                        android:padding="0dp"
                        android:textColorHint="#B83C2A"
                        android:textColor="#333"
                        android:singleLine="true"/>
                </LinearLayout>

                <!-- 相机按钮 -->
                <ImageView
                    android:id="@+id/btn_camera"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_red_circle"
                    android:padding="6dp"
                    android:src="@drawable/camera_top"
                    android:tint="@null"/>

                <!-- 搜索胶囊 -->
                <TextView
                    android:id="@+id/btn_search"
                    android:layout_width="64dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:background="@drawable/bg_red_pill"
                    android:text="搜索"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 首页功能：6 个图标 + 文案，背景同顶部浅绿 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/top_bg"
            android:paddingTop="8dp"
            android:paddingBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="6"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <!-- 扫一扫 -->
                <LinearLayout
                    android:id="@+id/action_scan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/home_action_scan"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="扫一扫"
                        android:textSize="12sp"
                        android:textColor="#7A4B3A"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- 我的快递 -->
                <LinearLayout
                    android:id="@+id/action_express"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/home_action_express"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的快递"
                        android:textSize="12sp"
                        android:textColor="#7A4B3A"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- 预约日历 -->
                <LinearLayout
                    android:id="@+id/action_calendar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/home_action_calendar"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预约日历"
                        android:textSize="12sp"
                        android:textColor="#7A4B3A"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- 红色场馆 -->
                <LinearLayout
                    android:id="@+id/action_museum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/home_action_museum"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="红色场馆"
                        android:textSize="12sp"
                        android:textColor="#7A4B3A"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- 非遗体验 -->
                <LinearLayout
                    android:id="@+id/action_intangible"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/home_action_intangible"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="非遗体验"
                        android:textSize="12sp"
                        android:textColor="#7A4B3A"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- 搭配时刻 -->
                <LinearLayout
                    android:id="@+id/action_match"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/home_action_match"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="搭配时刻"
                        android:textSize="12sp"
                        android:textColor="#7A4B3A"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 中心红色指示条 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="8dp">
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="10dp">
                    <View
                        android:layout_width="64dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="@color/brand_red"/>
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_red_circle"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Banner/视频区域：用 FrameLayout 包含 VideoView 和占位图 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="12dp">

            <VideoView
                android:id="@+id/homeVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:keepScreenOn="true" />

            <ImageView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/home_banner_img"/>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="精选布鞋"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>