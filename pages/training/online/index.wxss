/* 页面容器：全屏布局 */
.online-container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

/* 背景图：全屏覆盖，保持比例 */
.bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover; /* 覆盖全屏且不拉伸 */
  z-index: 1;
}

/* 半透明遮罩：提升文字可读性 */
.bg-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(140, 29, 21, 0.7); /* 与首页深红背景呼应 */
  z-index: 2;
}

/* 标题样式 */
.page-title {
  position: relative;
  z-index: 3;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  padding-top: 60rpx;
  margin-bottom: 12rpx;
}

.subtitle {
  position: relative;
  z-index: 3;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
  margin-bottom: 80rpx;
}

/* 音频列表容器 */
.audio-list {
  position: relative;
  z-index: 3;
  padding: 0 30rpx;
  margin-bottom: 100rpx;
}

/* 单个音频项样式 */
.audio-item {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 25rpx 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 15rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.audio-item:active {
  transform: scale(0.98);
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 音频图标样式 */
.audio-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 25rpx;
}

.play-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 音频信息区域 */
.audio-info {
  flex: 1;
}

.audio-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.audio-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

/* 音频播放时长 */
.audio-time {
  font-size: 22rpx;
  color: #8B0000;
  font-weight: 500;
  margin-right: 10rpx;
}

/* 全局播放控制条（底部固定） */
.global-audio-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.bar-left {
  display: flex;
  align-items: center;
}

.bar-play-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
}

.bar-title {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.bar-right {
  display: flex;
  align-items: center;
}

.bar-time {
  font-size: 22rpx;
  color: #666;
  margin-right: 20rpx;
}

.bar-stop-btn {
  background-color: #8B0000;
  color: #fff;
  border-radius: 20rpx;
  padding: 8rpx 20rpx;
  font-size: 22rpx;
}