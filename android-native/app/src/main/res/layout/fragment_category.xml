<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/top_bg">

        <!-- 顶部：头像 + 搜索框（与首页一致风格） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="6dp">
            <!-- 头像（搜索框外左侧图标） -->
            <ImageView
                android:id="@+id/category_header_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/cat_2"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"/>

            <!-- 搜索框占满剩余空间 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/header_search_height"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_search_box"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/category_et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="搜索"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:textColorHint="@color/brand_red"
                    android:textColor="#333"
                    android:singleLine="true"/>
            </LinearLayout>

            <!-- 搜索胶囊按钮 -->
            <TextView
                android:id="@+id/category_btn_search"
                android:layout_width="64dp"
                android:layout_height="@dimen/header_search_height"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:background="@drawable/bg_red_pill"
                android:text="搜索"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- 组：非遗布鞋 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="6dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/section1_icon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/cat_3"/>
                <TextView
                    android:id="@+id/section1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="非遗布鞋"
                    android:textColor="@color/title_teal"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_marginStart="8dp"/>
                <LinearLayout
                    android:id="@+id/section1_stars_row"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clipToPadding="false"/>
            </LinearLayout>

            <GridView
                android:id="@+id/grid1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:horizontalSpacing="@dimen/category_grid_hspace"
                android:verticalSpacing="@dimen/category_grid_vspace"
                android:stretchMode="columnWidth"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>
        </LinearLayout>

        <!-- 组：团结北庄 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="6dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/section2_icon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/cat_3"/>
                <TextView
                    android:id="@+id/section2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="团结北庄"
                    android:textColor="@color/title_teal"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_marginStart="8dp"/>
                <LinearLayout
                    android:id="@+id/section2_stars_row"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clipToPadding="false"/>
            </LinearLayout>

            <GridView
                android:id="@+id/grid2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:horizontalSpacing="@dimen/category_grid_hspace"
                android:verticalSpacing="@dimen/category_grid_vspace"
                android:stretchMode="columnWidth"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>
        </LinearLayout>

        <!-- 组：红色西柏坡 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="20dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/section3_icon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/cat_3"/>
                <TextView
                    android:id="@+id/section3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="红色西柏坡"
                    android:textColor="@color/title_teal"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_marginStart="8dp"/>
                <LinearLayout
                    android:id="@+id/section3_stars_row"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clipToPadding="false"/>
            </LinearLayout>

            <GridView
                android:id="@+id/grid3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:horizontalSpacing="@dimen/category_grid_hspace"
                android:verticalSpacing="@dimen/category_grid_vspace"
                android:stretchMode="columnWidth"
                android:paddingTop="8dp"
                android:paddingBottom="12dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
