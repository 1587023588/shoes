/* 全屏容器：黑色背景突出图片，避免白边 */
.carousel-container { position: relative; width: 100%; height: 100vh; overflow: hidden; background-color: #000; }
.carousel-wrapper { display: flex; height: 100%; transition-property: transform; will-change: transform; }
.carousel-slide { width: 100%; flex-shrink: 0; height: 100%; display: flex; align-items: center; justify-content: center; }
.slide-image { max-width: 100%; max-height: 100%; object-fit: contain; }
.indicators { position: absolute; bottom: 30rpx; left: 0; right: 0; display: flex; justify-content: center; gap: 8rpx; z-index: 10; }
.indicator { width: 10rpx; height: 10rpx; border-radius: 50%; background-color: rgba(255, 255, 255, 0.4); transition: all 0.3s ease; }
.indicator.active { background-color: #fff; width: 30rpx; border-radius: 5rpx; }
.control-btn { position: absolute; top: 50%; transform: translateY(-50%); width: 80rpx; height: 80rpx; color: #fff; background-color: rgba(0, 0, 0, 0.3); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 36rpx; opacity: 0.7; transition: opacity 0.3s, background-color 0.3s; z-index: 10; }
.control-btn:hover { opacity: 1; background-color: rgba(0, 0, 0, 0.5); }
.prev { left: 20rpx; }
.next { right: 20rpx; }
