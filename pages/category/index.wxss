/* 容器样式 */
.container {
  min-height: 100vh;
  padding: 20rpx;
  position: relative;
  overflow: hidden;
}

/* 背景图样式（CDN图片） */
.bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  object-fit: cover;
}

/* 半透明遮罩 */
.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.8);
  z-index: 0;
}

/* 内容层级 */
.back-home, .category-tabs, .spirit-detail {
  position: relative;
  z-index: 1;
}

/* 返回按钮 */
.back-home {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background-color: rgba(179, 18, 23, 0.8);
  border-radius: 30rpx;
  width: fit-content;
  margin-bottom: 20rpx;
}
.back-text {
  font-size: 26rpx;
  color: #fff;
  margin-left: 10rpx;
  font-weight: 500;
}

/* 分类标签栏 */
.category-tabs {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  padding: 5rpx 0;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(179, 18, 23, 0.1);
}

/* 精神详情容器 */
.spirit-detail {
  background-color: rgba(255, 255, 255, 0.9);
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(179, 18, 23, 0.1);
}

/* 精神标题 */
.spirit-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #b31217;
  text-align: center;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 2px solid #f8e8e8;
}

/* 核心要点 */
.core-points {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #fff8f8;
  border-radius: 8rpx;
}
.core-item {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}
.core-text {
  font-size: 26rpx;
  color: #b31217;
  margin-left: 8rpx;
}

/* 章节样式 */
.section {
  margin-bottom: 30rpx;
}
.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #b31217;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #f8e8e8;
}
.section-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.8;
  text-indent: 52rpx;
  margin-bottom: 20rpx;
}
